---
import Layout from "../layouts/Layout.astro";
import ColorsInput from "../components/ColorsInput.astro";
import SamplePage from "../components/SamplePage.astro";
import ContrastChecker from "../components/ContrastChecker.astro";
import CvdSelector from "../components/CvdSelector.astro";
import Examples from "../components/Examples.astro";
---

<Layout
	title="Covidesi - Color Vision Deficency Simulator"
	description="A color blindness simulator for developers so you can see how people with different color vision deficencies actually see the world, and your page."
>
	<main class="flex flex-col 2xl:flex-row gap-4">
		<!-- Small sample page with the controls -->
		<section class="w-full 2xl:w-1/2 p-4">
			<!-- Text and Background Color Inputs -->
			<div class="flex flex-col gap-6">
				<div
					class="flex flex-col gap-6 w-full justify-between items-center custom-920:flex-row custom-920:gap-0"
				>
					<ColorsInput />
					<ContrastChecker />
				</div>

				<!-- CVD Selector with severity -->
				<CvdSelector />

				<!-- Sample embeded web page -->
				<SamplePage
					class="w-full flex-1 flex flex-col gap-6 border-2 border-slate-950 rounded-lg p-8"
				/>
			</div>
		</section>

		<!-- Banner & Buttons examples -->
		<section class="w-full 2xl:w-1/2 p-4">
			<Examples />
		</section>
	</main>
</Layout>
