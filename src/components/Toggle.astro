---
interface Props {
	textColor: string;
	bgColor: string;
	class?: string;
}

const { bgColor, textColor } = Astro.props;
---

<label
	data-cvd={Astro.props["data-cvd"] ?? "Normal"}
	style=`--bc: ${bgColor}; --tc: ${textColor}`
	class=`relative inline-flex items-center gap-2 w-fit sm:scale-150 ${Astro.props.class}`
>
	<input class="sr-only peer invisible" type="checkbox" />
	<div
		class="w-11 h-6 rounded-full border border-[var(--tc)] bg-[var(--bc)] after:bg-[var(--tc)] after:absolute after:content-[''] after:aspect-square after:w-5 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full after:top-[2px] after:start-[2px] after:rounded-full after:transition-transform"
	>
	</div>
</label>
